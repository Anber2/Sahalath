<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/transparent"
    android:orientation="vertical">


    <TextView
        android:id="@+id/driver_home_title"
        style="@style/CommonTitle"
        android:layout_alignParentTop="true"
        android:text="@string/pending_order" />

    <ListView
        android:id="@+id/list_view_home_driver"
        style="@style/scrollBarDefault"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/driver_home_title"
        android:layout_marginBottom="56dp"
        android:divider="@color/color_theme"
        android:dividerHeight="1dp"
        android:visibility="visible" />

    <LinearLayout
        android:id="@+id/ll_buttons"
        android:layout_width="match_parent"
        android:layout_height="46dp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="4dp"
        android:gravity="center"
        android:orientation="horizontal"
        android:visibility="gone">

        <Button
            android:id="@+id/btn_home_reject"
            style="@style/ThemedButton"
            android:layout_width="wrap_content"
            android:layout_height="28dp"
            android:layout_marginEnd="12dp"
            android:paddingStart="8dp"
            android:paddingEnd="8dp"
            android:text="@string/reject" />

        <Button
            android:id="@+id/btn_home_accept"
            style="@style/ThemedButton"
            android:layout_width="wrap_content"
            android:layout_height="28dp"
            android:layout_marginStart="8dp"
            android:paddingStart="8dp"
            android:paddingEnd="12dp"
            android:text="@string/accept" />
    </LinearLayout>


    <LinearLayout
        android:id="@+id/ll_driver_status"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/black_tarns_layout_dark"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            style="@style/textColorAndStyle"
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:gravity="center"
            android:text="@string/welcome"
            android:textAllCaps="true"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/tv_home_driver_name"
            style="@style/textColorAndStyle"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:gravity="center"
            android:text="ANSON K V"
            android:textSize="22sp" />

        <Button
            android:id="@+id/btn_driver_home_offline"
            style="@style/textColorAndStyle"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_marginStart="46dp"
            android:layout_marginEnd="46dp"
            android:layout_marginTop="16dp"
            android:background="@drawable/bg_offline_btn"
            android:text="@string/offline" />

        <Button
            android:id="@+id/btn_driver_home_online"
            style="@style/textColorAndStyle"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_marginStart="46dp"
            android:layout_marginEnd="46dp"
            android:layout_marginTop="8dp"
            android:background="@drawable/bg_online_btn"
            android:text="@string/online" />
    </LinearLayout>
</RelativeLayout>