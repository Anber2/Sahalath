<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/transparent"
    android:orientation="vertical">

    <TextView
        android:id="@+id/tv_assigned_title"
        style="@style/CommonTitle"
        android:text="@string/assigned_works" />

    <ListView
        android:id="@+id/list_view_sb_assigned_works"
        style="@style/scrollBarDefault"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_assigned_title"
        android:layout_marginBottom="44dp"
        android:divider="@color/color_theme"
        android:dividerHeight="1dp"
        android:padding="12dp"
        android:visibility="visible" />

    <LinearLayout
        android:id="@+id/ll_assigned_button"
        android:layout_width="match_parent"
        android:layout_height="36dp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="4dp"
        android:gravity="center"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btn_accept_work"
            style="@style/ThemedButton"
            android:paddingStart="4dp"
            android:paddingEnd="4dp"
            android:text="@string/accept" />

        <Button
            android:id="@+id/btn_reject_work"
            style="@style/ThemedButton"
            android:layout_marginStart="16dp"
            android:paddingStart="4dp"
            android:paddingEnd="4dp"
            android:text="@string/reject" />
    </LinearLayout>

</RelativeLayout>