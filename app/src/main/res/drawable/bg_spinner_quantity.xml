<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item>

        <layer-list>

            <item>
                <shape >
                    <gradient android:angle="90" android:endColor="@color/spinner_bg" android:startColor="@color/spinner_bg" android:type="linear" />

                    <stroke android:width="0dp" android:color="#0fb1fa" />

                    <corners android:radius="3dp" />

                    <padding android:bottom="3dp" android:left="3dp" android:right="3dp" android:top="3dp" />
                </shape>
            </item>

            <item android:right="3dp" android:left="20dp">
                <bitmap android:gravity="center_vertical|end" android:src="@drawable/arrow_down_spinner" />
            </item>

        </layer-list>

    </item>
</selector>