<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- - - - - - - - Circle Layout - - - - - - - -->
    <declare-styleable name="SearchCircleLayout">
        <attr name="isRotating" format="boolean" />
        <attr name="radius" format="dimension" />
        <attr name="speed" format="integer" />
        <attr name="array_position" format="integer" />
        <attr name="firstChildPosition">
            <enum name="East" value="0" />
            <enum name="South" value="90" />
            <enum name="West" value="180" />
            <enum name="North" value="270" />
        </attr>
    </declare-styleable>

    <!--- - - - - -TextView Id for Restaurant place  - - - -->
    <declare-styleable name="TextViewWithId">
        <attr name="textId" format="string" />
    </declare-styleable>

    <!-- - - - - - - - Image view with text - - - - - - - -->
    <declare-styleable name="AnsonImageView">
        <attr name="xOffset" format="float" />
        <attr name="yOffset" format="float" />
        <attr name="text" format="string" />
        <attr name="searchId" format="string" />
        <attr name="textSizePx" format="float" />
        <attr name="textColor" format="color" />
        <attr name="customFont" format="string" />
        <attr name="textStyle" format="enum">
            <enum name="normal" value="0" />
            <enum name="bold" value="1" />
            <enum name="italic" value="2" />
            <enum name="boldItalic" value="3" />
        </attr>
        <attr name="labelPosition" format="enum">
            <enum name="topLeft" value="0" />
            <enum name="topRight" value="1" />
            <enum name="bottomLeft" value="2" />
            <enum name="bottomRight" value="3" />
            <enum name="topCenter" value="4" />
            <enum name="bottomCenter" value="5" />
            <enum name="center" value="6" />
        </attr>

    </declare-styleable>

    <!-- - - - - - - - CircleProgressBar - - - - - - - -->

    <declare-styleable name="CircleProgressBar">
        <attr name="min" format="integer" />
        <attr name="max" format="integer" />
        <attr name="progress" format="integer" />
        <attr name="progressbarColor" format="color" />
        <attr name="progressBarThickness" format="dimension" />
    </declare-styleable>

    <!-- - - - - - - - RatingBar - - - - - - - -->
    <declare-styleable name="MagicProgressBar">
        <attr name="mpb_percent" format="float" />
        <attr name="mpb_fill_color" format="color" />
        <attr name="mpb_background_color" format="color" />
        <attr name="mpb_flat" format="boolean" />
    </declare-styleable>
    <!-- - - - - - - - Common RatingBar - - - - - - - -->
    <declare-styleable name="CustomRatingBar">
        <attr name="maxStars" format="integer" />
        <attr name="stars" format="float" />
        <attr name="starOff" format="reference|integer" />
        <attr name="starOn" format="reference|integer" />
        <attr name="starHalf" format="reference|integer" />
        <attr name="starPadding" format="dimension" />
        <attr name="onlyForDisplay" format="boolean" />
        <attr name="halfStars" format="boolean" />
    </declare-styleable>

    <declare-styleable name="twowayview_TwoWayView">
        <attr name="twowayview_layoutManager" format="string" />
    </declare-styleable>

    <declare-styleable name="twowayview_TwoWayLayoutManager">
        <attr name="android:orientation" tools:ignore="ResourceName" />
    </declare-styleable>
    <declare-styleable name="GeometricProgressView">
        <attr name="gp_type" format="enum">
            <enum name="kite" value="0" />
            <enum name="triangle" value="1" />
        </attr>
        <attr name="gp_number_of_angles" format="integer" />
        <attr name="gp_color" format="color" />
        <attr name="gp_duration" format="integer" />
        <attr name="gp_figure_padding" format="dimension" />
        <attr name="gp_style" format="reference" />
    </declare-styleable>
</resources>