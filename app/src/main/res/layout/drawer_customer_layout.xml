        <View style="@style/DrawerLine" />

        <TextView
            android:id="@+id/tv_cst_drawer_contact_us"
            style="@style/DrawerTextView"
            android:gravity="start|center_vertical"
            android:text="@string/contact_us" />

        <View style="@style/DrawerLine" />

        <TextView
            android:id="@+id/tv_cst_drawer_notification"
            style="@style/DrawerTextView"
            android:gravity="start|center_vertical"
            android:text="@string/notification" />

        <View style="@style/DrawerLine" />

        <TextView
            android:id="@+id/tv_cst_drawer_offers"
            style="@style/DrawerTextView"
            android:gravity="start|center_vertical"
            android:text="@string/offers" />

        <View style="@style/DrawerLine" />

        <TextView
            android:id="@+id/tv_cst_drawer_logout"
            style="@style/DrawerTextView"
            android:gravity="start|center_vertical"
            android:text="@string/logout" />

        <View style="@style/DrawerLine" />
    </LinearLayout>
</ScrollView>