<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

  <include layout="@layout/customer_food_review_header"/>

    <ScrollView
        style="@style/scrollBarDefault"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:paddingTop="12dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:baselineAligned="false"
            android:orientation="vertical"
            android:paddingTop="8dp">

            <TextView
                style="@style/textColorAndStyle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="@string/rating_and_review"
                android:textAllCaps="true"
                android:textSize="20sp" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginStart="52dp"
                android:layout_marginEnd="52dp"
                android:layout_marginTop="4dp"
                android:background="@color/color_theme" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="2">

                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1">

                    <TextView
                        android:id="@+id/tv_average_rating_value"
                        style="@style/textColorAndStyle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_above="@+id/rating_center"
                        android:layout_marginEnd="8dp"
                        android:layout_toStartOf="@+id/rating_center"
                        android:text="4.5"
                        android:textSize="32sp" />

                    <View
                        android:id="@+id/rating_center"
                        android:layout_width="1dp"
                        android:layout_height="1dp"
                        android:layout_centerHorizontal="true"
                        android:layout_centerVertical="true" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignBottom="@+id/tv_average_rating_value"
                        android:layout_alignTop="@+id/tv_average_rating_value"
                        android:layout_marginStart="8dp"
                        android:layout_toEndOf="@+id/rating_center"
                        android:src="@drawable/ic_rating_main_star" />

                    <TextView
                        android:id="@+id/tv_review_count"
                        style="@style/textColorAndStyle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/rating_center"
                        android:layout_marginStart="8dp"
                        android:layout_marginEnd="8dp"
                        android:gravity="center"
                        android:minLines="2"
                        android:text="13933 Rating  1165 REviews"
                        android:textSize="18sp" />

                </RelativeLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginStart="4dp"
                    android:layout_marginEnd="12dp"
                    android:layout_marginTop="8dp"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"
                        android:orientation="horizontal"
                        android:paddingStart="4dp"
                        android:paddingEnd="12dp">

                        <TextView
                            style="@style/textColorAndStyle"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:drawablePadding="4dp"
                            android:drawableEnd="@drawable/ic_rating_bar_star_active"
                            android:text="5" />

                        <com.mawaqaa.sahalath.customviews.MagicProgressBar
                            android:id="@+id/mpb_five"
                            style="@style/demo_progress_bar"
                            android:layout_gravity="center_vertical"
                            app:mpb_background_color="@color/spinner_bg"
                            app:mpb_fill_color="@color/rating_five" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"
                        android:orientation="horizontal"
                        android:paddingStart="4dp"
                        android:paddingEnd="12dp">

                        <TextView
                            style="@style/textColorAndStyle"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:drawablePadding="4dp"
                            android:drawableEnd="@drawable/ic_rating_bar_star_active"
                            android:text="4" />

                        <com.mawaqaa.sahalath.customviews.MagicProgressBar
                            android:id="@+id/mpb_four"
                            style="@style/demo_progress_bar"
                            android:layout_gravity="center_vertical"
                            app:mpb_background_color="@color/spinner_bg"
                            app:mpb_fill_color="@color/rating_four_three" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"
                        android:orientation="horizontal"
                        android:paddingStart="4dp"
                        android:paddingEnd="12dp">

                        <TextView
                            style="@style/textColorAndStyle"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:drawablePadding="4dp"
                            android:drawableEnd="@drawable/ic_rating_bar_star_active"
                            android:text="3" />

                        <com.mawaqaa.sahalath.customviews.MagicProgressBar
                            android:id="@+id/mpb_three"
                            style="@style/demo_progress_bar"
                            android:layout_gravity="center_vertical"
                            app:mpb_background_color="@color/spinner_bg"
                            app:mpb_fill_color="@color/rating_four_three" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"
                        android:orientation="horizontal"
                        android:paddingStart="4dp"
                        android:paddingEnd="12dp">

                        <TextView
                            style="@style/textColorAndStyle"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:drawablePadding="4dp"
                            android:drawableEnd="@drawable/ic_rating_bar_star_active"
                            android:text="2" />

                        <com.mawaqaa.sahalath.customviews.MagicProgressBar
                            android:id="@+id/mpb_two"
                            style="@style/demo_progress_bar"
                            android:layout_gravity="center_vertical"
                            app:mpb_background_color="@color/spinner_bg"
                            app:mpb_fill_color="@color/rating_two" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"
                        android:orientation="horizontal"
                        android:paddingStart="4dp"
                        android:paddingEnd="12dp">

                        <TextView
                            style="@style/textColorAndStyle"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:drawablePadding="4dp"
                            android:drawableEnd="@drawable/ic_rating_bar_star_active"
                            android:text="1" />

                        <com.mawaqaa.sahalath.customviews.MagicProgressBar
                            android:id="@+id/mpb_one"
                            style="@style/demo_progress_bar"
                            android:layout_gravity="center_vertical"
                            app:mpb_background_color="@color/spinner_bg"
                            app:mpb_fill_color="@color/rating_one" />

                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>

            <Button
                android:id="@+id/btn_write_review"
                style="@style/ThemedButton"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:layout_gravity="center_horizontal"
                android:layout_margin="12dp"
                android:paddingStart="24dp"
                android:paddingEnd="24dp"
                android:text="@string/write_review"
                android:textAllCaps="true" />

            <LinearLayout
                android:id="@+id/food_item_review_list_view"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@android:color/transparent"
                android:orientation="vertical" />
            <!--  <com.mawaqaa.sahalath.customviews.ScrollDisabledListView
                  android:id="@+id/food_item_review_list_view"
                  android:layout_width="match_parent"
                  android:layout_height="match_parent"

                  android:background="@android:color/transparent">

              </com.mawaqaa.sahalath.customviews.ScrollDisabledListView>-->
        </LinearLayout>
    </ScrollView>
</LinearLayout>